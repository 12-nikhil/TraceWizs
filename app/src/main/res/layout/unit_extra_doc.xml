<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m_5">

    <ImageView
        android:id="@+id/img_extra_doc"
        android:layout_width="@dimen/m_80"
        android:layout_height="@dimen/m_80"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_outline_cancel_24"/>

    <ImageView
        android:id="@+id/img_extra_doc_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_extra_doc"
       android:layout_centerHorizontal="true"
        android:src="@drawable/ic_outline_cancel_24"
        android:layout_marginTop="@dimen/m_16"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_extra_doc"
        android:layout_margin="@dimen/m_16"
        android:gravity="center"
        android:paddingTop="@dimen/m_20"
        android:textStyle="bold"/>
</RelativeLayout>