<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TruckDetailsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/m_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_supplier_name"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"/>
        <EditText
            android:id="@+id/edt_supplier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="@dimen/m_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_driver_name"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"
            android:layout_marginTop="@dimen/m_12"/>
        <EditText
            android:id="@+id/edt_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_baseline_perm_identity_24"
            android:drawablePadding="@dimen/m_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_mobile_number"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"
            android:layout_marginTop="@dimen/m_12"/>
        <EditText
            android:id="@+id/edt_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:inputType="number"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="@dimen/m_12"
            android:maxLength="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_licence_no"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"
            android:layout_marginTop="@dimen/m_12"/>
        <EditText
            android:id="@+id/edt_license_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:drawableStart="@drawable/ic_baseline_credit_card_24"
            android:drawablePadding="@dimen/m_12"
           android:inputType="textCapCharacters"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_truck_no"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"
            android:layout_marginTop="@dimen/m_12"/>
        <EditText
            android:id="@+id/edt_truck_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:drawableStart="@drawable/ic_baseline_directions_car_24"
            android:drawablePadding="@dimen/m_12"
           android:inputType="textCapCharacters"/>
       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_invoice_no"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"
            android:layout_marginTop="@dimen/m_12"/>
        <EditText
            android:id="@+id/edt_invoice_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:textAllCaps="true"
            android:drawableStart="@drawable/ic_baseline_invoice_24"
            android:drawablePadding="@dimen/m_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_coa"
            android:textColor="@color/black"
            android:textSize="@dimen/s_20"
            android:layout_marginTop="@dimen/m_12"/>
        <EditText
            android:id="@+id/edt_coa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent"
            android:padding="@dimen/m_10"
            android:layout_marginTop="@dimen/m_12"
            android:textAllCaps="true"
            android:drawableStart="@drawable/ic_outline_coa_24"
            android:drawablePadding="@dimen/m_12"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_16"
            android:layout_marginBottom="@dimen/s_20">
            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_30"
                android:background="@drawable/round_corner_button"
                android:padding="@dimen/m_16"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textDirection="firstStrongLtr" />
          <!--  <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_30"
                android:background="@drawable/round_corner_button"
                android:padding="@dimen/m_16"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/btn_submit"
                android:layout_alignParentEnd="true"
                android:visibility="visible"/>-->
            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_30"
                android:background="@drawable/round_corner_button"
                android:padding="@dimen/m_16"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                android:textColor="@color/white"
                android:textStyle="bold"
               android:layout_alignParentEnd="true"
                android:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>